<Window x:Class="GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:viewModel="clr-namespace:GUI.ViewModels"
        mc:Ignorable="d"
        Title="Steam Cards Farmer" 
        Height="440" Width="556" 
        ResizeMode="CanMinimize">
    <Grid>
        <xctk:DoubleUpDown 
            x:Name="PriceUpDown"  
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="162,10,0,0"
            Width="73" Height="28"
            Minimum="0" FormatString="F2" 
            Value ="{Binding GameMaxPrice}"
        />
        <Button 
            x:Name="PickGamesButton" 
            Margin="240,10,10,0" 
            Height="28" 
            VerticalAlignment="Top" 
            Content="Выбрать игры"
        />
        <Button 
            x:Name="CalculatePayoffChanceButton" 
            Margin="240,0,10,106" 
            Height="28" 
            VerticalAlignment="Bottom"
            Content="Рассчитать шанс получения прибыли" 
        />
        <Label 
            x:Name="MaxPriceLabel" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Margin="10,10,0,0" 
            Width="152" Height="28" 
            Content="Максимальная цена игры"
        />
        <Label 
            x:Name="ChanceLabel" 
            VerticalAlignment="Bottom"
            Margin="240,0,10,10" 
            Height="91" 
            FontWeight="Bold" FontSize="48" 
            Content="Шанс: 100%" 
            HorizontalContentAlignment="Center" 
            VerticalContentAlignment="Center" 
        />
        <ListBox 
            x:Name="GamesListBox" 
            HorizontalAlignment="Left" 
            Margin="10,43,0,10" 
            Width="225"
        />
        <Image 
            x:Name="GameImage" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Left" 
            Margin="240,43,0,0" 
            Width="300" Height="100"
        />
    </Grid>
</Window>
